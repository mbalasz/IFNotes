<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mateusz.ifnotes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".component.IFNotesApplication">
        <activity android:name=".presentation.ifnotes.ui.IFNotesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".eatinglogs.ui.EatingLogsActivity"
            android:label="@string/title_activity_eating_logs"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".eatinglogs.editlog.ui.EditEatingLogActivity">
        </activity>
        <activity
            android:name=".chart.ui.EatingLogsChartActivity"
            android:label="@string/title_activity_chart"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>